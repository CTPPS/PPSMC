#!/bin/bash

jobname=$1

# create folder for err:
mkdir -p err/${jobname}

# add info to condor DAG:
line=$( tail -n 1 condor.dag )
if ! [[ $line = "#"* ]];
then
    head -n -1 condor.dag > tmp.txt
    mv tmp.txt condor.dag
fi
echo "VARS pLHE JOBNAME=\"${jobname}\"" >> condor.dag



# submit condor jobs:
condor_submit_dag condor.dag
